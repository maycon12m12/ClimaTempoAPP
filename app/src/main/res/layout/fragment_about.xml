<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundColor"
    android:padding="24dp">

    <!-- Seção para foto do aluno com contorno e arredondamento aplicado diretamente -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_profile"
        android:layout_marginBottom="16dp"
        android:contentDescription="Foto do aluno"
        android:scaleType="centerCrop"
        android:background="@android:color/white"
        android:padding="4dp"
        android:elevation="4dp"
        android:outlineProvider="bounds"
        android:clipToOutline="true"
        android:layout_gravity="center"/>

    <!-- Nome do Aluno -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: Maycon Juan Cassiano dos Santos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- RA do Aluno -->
    <TextView
        android:id="@+id/textViewRA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RA: 09044019"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- Curso do Aluno -->
    <TextView
        android:id="@+id/textViewCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curso: Análise e Desenvolvimento de Sistemas"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
